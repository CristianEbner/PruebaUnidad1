<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/giwallpaper"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botones y funciones"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="RadioButton"
                android:text="Spinner" />

            <Button
                android:id="@+id/btn_recyclerScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="RecyclerScroll"
                android:text="RecyclerScrollView"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnConstraintLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="Constraint"
                android:text="ConstraintLayout"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnLinearLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="Linear"
                android:text="Linearlayout"
                android:textSize="10sp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnTableLayout"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="Table"
                android:text="TableLayout"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/CheckBoxProgressBar"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="CheckBoxProgressBar"
                android:text="CheckBoxProgressBar"
                android:textSize="9sp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>